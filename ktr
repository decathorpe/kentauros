#!/usr/bin/env python3

"""
ktr is kentauros.py
"""

from kentauros.init import DEBUG, VERBY, log
from kentauros.config import KTR_CONF
from kentauros.bootstrap import ktr_bootstrap

from kentauros.source.git import GitSource


log("DEBUG set: " + str(DEBUG), 1)
log("VERBOSITY: " + str(VERBY), 1)

log("CONFDIR: " + KTR_CONF.confdir, 1)
log("DATADIR: " + KTR_CONF.datadir, 1)
log("SPECDIR: " + KTR_CONF.specdir, 1)

ktr_bootstrap()

source = GitSource("mesa", shallow=True)
source.orig = "git://anongit.freedesktop.org/mesa/mesa"
rev = source.get()

